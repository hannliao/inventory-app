<h1 class="font-bold m-5"><%= title %></h1>
<form action="/categories/new" method="POST" class="flex flex-col">
  <label for="name">Name</label>
  <input
    type="text"
    name="name"
    required
    class="p-2 border border-slate-500 rounded my-2"
  />
  <div class="flex justify-between my-4">
    <label for="color">Color</label>
    <input type="color" name="color" required />
  </div>
  <button
    type="submit"
    class="px-6 py-3 border border-black rounded-md hover:bg-neutral-200"
  >
    Save
  </button>

  <a
    href="/categories"
    class="text-center mt-3 px-6 py-3 border border-black rounded-md hover:bg-neutral-200"
  >
    Cancel
  </a>
</form>
