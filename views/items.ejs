<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/index.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <a href="/items/new">Add Item</a>
    <table>
      <tr>
        <th>Item</th>
        <th>Name</th>
        <th>Price</th>
        <th>Qty</th>
      </tr>

      <% items.forEach((item) => { %>
      <tr>
        <td><img src="<%= item.src %>" alt="<%= item.name %>" /></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.qty %></td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
